%% vim: set filetype=erlang : -*- erlang -*-

{erl_opts, [
            debug_info,
            warnings_as_errors
           ]}.
{ct_opts, [{dir, "ct"}]}.

{deps, [
        {bbmustache, "1.1.0"}
       ]}.

{xref_checks,[
              undefined_function_calls,
              undefined_functions,
              locals_not_used,
              deprecated_function_calls,
              deprecated_functions
             ]}.

{relx, [{release, {spam,
    "0.0.1" %% relflow-release-version-marker
       }, [spam]},
        {dev_mode, false},
        {include_erts, false},
        {extended_start_script, true}]}.

{plugins, [{relflow, "1.0.4"}]}.
{ct_readable, false}.
